{
  "manifest_version": 2,

  "name": "じかんをまもろう！ YouTubeはあと何分？",
  "short_name": "YouTube タイマー",
  "description": "YouTube の見過ぎを防止する",
  "version": "1.0.3",

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistance": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "assets/mipmap-mdpi/icon.png",
    "72": "assets/mipmap-hdpi/icon.png",
    "96": "assets/mipmap-xhdpi/icon.png",
    "144": "assets/mipmap-xxhdpi/icon.png",
    "192": "assets/mipmap-xxxhdpi/icon.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
