{
  "manifest_version": 2,

  "name": "Time Limit by URL",
  "description": "Set time limit for browsing of specific URL",
  "version": "1.0",

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistance": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icon.png"
  },
  "permissions": [
    "tabs"
  ]
}
